<Window x:Class="TPV.WndConsultaTicket"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPV"
        mc:Ignorable="d"
        Title="Consulta Ticket" Height="450" Width="800">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <TextBlock Text="ID TICKET" Margin="5,5,5,0"/>
            <TextBox x:Name="txbIdTicket" Margin="5,5,5,0"/>
        </DockPanel>
        <Button x:Name="btnCarregarTicket" Content="CARREGAR TICKET" DockPanel.Dock="Top" HorizontalAlignment="Right" Margin="0,10,10,0" Click="btnCarregarTicket_Click"/>
        <Button x:Name="btnImprimirTicket" Content="IMPRIMIR | ENVIAR" DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin="0,5,5,5" Padding="5"/>
        
        <DockPanel Margin="10,10,10,5" x:Name="dpLlistaTicket">
            <TextBlock x:Name="txTitleTicket" FontSize="16" Text="TICKET #00" TextAlignment="Center" DockPanel.Dock="Top"/>
            <ListBox x:Name="lsbTicket"/>
        </DockPanel>

    </DockPanel>
</Window>
